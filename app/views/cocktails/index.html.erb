<div class="row">
  <div class="col-8"> 
  <br>
    <div class="movie_homepage">
    </div>
    <br>
      <% @cocktails.each do |cocktail| %>
        <div class="card p-3 mb-3  card_title ">
        <h2><%= cocktail.name %></h2>
          <div class="card-image">
            <image_tag "alcohol-bar.jpg"  >
          </div>
          <div class="cardbottom">
            <br>
            <%= link_to "show cocktail", cocktail_path(cocktail)%>
            <%= link_to "Delete", method: :delete %>
            <%=link_to 'Create Cocktail', new_cocktail_path %>
          </div>
        </div>
      <% end %> 
  </div>     
</div> 

